---
import Logo from "@/assets/favicon.svg";
import { socialLinks } from "@/consts";
import { Globe, Shield } from "@lucide/astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
import { getCollection } from "astro:content";

const legal = await getCollection("legal");
---

<footer
  class="bg-slate-900 dark:bg-black text-slate-300 pt-24 pb-12 overflow-hidden relative"
>
  {/* Decorative background element */}
  <div
    class="absolute bottom-0 left-1/2 -translate-x-1/2 w-250 h-100 bg-indigo-600/10 blur-[120px] rounded-full z-0 pointer-events-none"
  >
  </div>

  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="grid grid-cols-1 lg:grid-cols-12 gap-16 mb-20">
      {/* Brand Column */}
      <div class="lg:col-span-5">
        <a href="/" class="flex items-center gap-3 mb-8 group">
          <Image
            width={40}
            height={40}
            src={Logo}
            alt="CoreX4Dev Logo"
            loading="eager"
            class="w-10 h-10 rounded-xl flex items-center justify-center text-white font-black shadow-lg shadow-indigo-900/40 group-hover:scale-110 transition-transform"
          />

          <span class="font-black text-2xl text-white tracking-tight"
            >CoreX4Dev</span
          >
        </a>
        <p class="text-slate-400 text-lg leading-relaxed mb-8 max-w-sm">
          Elevando el estándar del desarrollo web a través de contenido técnico
          profundo, herramientas open source y consultoría estratégica.
        </p>
        <div class="flex gap-4">
          {
            socialLinks.map((social) => (
              <a
                href={social.url}
                aria-label={`Enlace a red social: ${social.name}`}
                target="_blank"
                rel="noopener noreferrer"
                class="w-10 h-10 bg-white/5 border border-white/10 rounded-xl flex items-center justify-center hover:bg-indigo-600 hover:border-indigo-500 hover:text-white transition-all group"
                aria-label={social.name}
              >
                <Icon name={social.icon} size={20} />
              </a>
            ))
          }
        </div>
      </div>

      {/* Links Columns */}
      <div class="lg:col-span-7 grid grid-cols-2 sm:grid-cols-3 gap-8">
        <div>
          <h3
            class="text-white font-black uppercase tracking-widest text-xs mb-8"
          >
            Contenido
          </h3>
          <ul class="space-y-4 text-sm font-medium">
            <li>
              <a href="/blog" class="hover:text-indigo-400 transition-colors"
                >Blog Técnico</a
              >
            </li>
            <li>
              <a href="/videos" class="hover:text-indigo-400 transition-colors"
                >Vídeos</a
              >
            </li>
            <li>
              <a
                href="/productos"
                class="hover:text-indigo-400 transition-colors">Proyectos</a
              >
            </li>
            <li>
              <a
                href="/sobre-mi"
                class="hover:text-indigo-400 transition-colors">Sobre mí</a
              >
            </li>
            <li>
              <a
                href="/cms-decision-pack"
                class="hover:text-indigo-400 transition-colors"
                >CMS Decision Pack</a
              >
            </li>
          </ul>
        </div>
        <div>
          <h3
            class="text-white font-black uppercase tracking-widest text-xs mb-8"
          >
            Comunidad
          </h3>
          <ul class="space-y-4 text-sm font-medium">
            <li>
              <a
                href="https://youtube.com/@CoreX4Dev"
                class="hover:text-indigo-400 transition-colors">YouTube</a
              >
            </li>
            <li>
              <a
                href="https://github.com/corex4dev"
                class="hover:text-indigo-400 transition-colors">GitHub</a
              >
            </li>
            <!-- <li>
              <a href="#" class="hover:text-indigo-400 transition-colors"
                >Newsletter</a
              >
            </li> -->
            <!-- <li>
              <a href="#" class="hover:text-indigo-400 transition-colors"
                >Discord</a
              >
            </li> -->
          </ul>
        </div>
        {
          legal.length > 0 && (
            <div class="col-span-2 sm:col-span-1">
              <h3 class="text-white font-black uppercase tracking-widest text-xs mb-8">
                Legal
              </h3>
              <ul class="space-y-4 text-sm font-medium">
                {legal.map((l) => (
                  <li>
                    <a
                      href={`/legal/${l.id}`}
                      class="hover:text-indigo-400 transition-colors"
                    >
                      {l.data.title}
                    </a>
                  </li>
                ))}
                <li>
                  <a
                    href="/sitemap-index.xml"
                    class="hover:text-indigo-400 transition-colors"
                  >
                    Mapa del sitio
                  </a>
                </li>
              </ul>
            </div>
          )
        }
      </div>

      {/* Newsletter Column */}
      <!-- <div class="lg:col-span-3">
        <div class="bg-white/5 border border-white/10 rounded-4xl p-8">
          <h3 class="text-white font-black mb-4 flex items-center gap-2">
            <MessageSquare size={18} class="text-indigo-400" /> Newsletter
          </h3>
          <p class="text-sm text-slate-400 mb-6">
            Recibe guías exclusivas y actualizaciones técnicas cada semana.
          </p>
          <form class="space-y-3">
            <input
              type="email"
              placeholder="tu@email.com"
              class="w-full bg-white/5 border-white/10 rounded-xl px-4 py-3 text-sm focus:border-indigo-500 focus:ring-0 transition-all"
            />
            <button
              class="w-full bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-3 rounded-xl text-sm transition-all flex items-center justify-center gap-2 group"
            >
              Suscribirme <ArrowRight
                size={16}
                class="group-hover:translate-x-1 transition-transform"
              />
            </button>
          </form>
        </div>
      </div> -->
    </div>

    {/* Bottom Bar */}
    <div
      class="pt-12 border-t border-white/5 flex flex-col md:flex-row justify-between items-center gap-6"
    >
      <div class="flex items-center gap-2 text-sm text-slate-500 font-medium">
        <span>© <span id="year"></span> Daniel Gonzalez Cuetara</span>
        <span class="hidden md:inline">•</span>
        <span>CoreX4Dev</span>
      </div>

      <div
        class="flex items-center gap-6 text-xs font-black uppercase tracking-widest text-slate-500"
      >
        <div class="flex items-center gap-1.5">
          <Globe size={14} /> ES
        </div>
        <div class="flex items-center gap-1.5">
          <Shield size={14} /> Seguro
        </div>
      </div>
    </div>
  </div>
</footer>
