---
import { getCollection } from "astro:content";
import { ArrowRight } from "@lucide/astro";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";

const recentVideos = (
  await getCollection("video", (e) => e.data.featured)
).sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());
---

{/* Latest Videos */}
<section class="bg-slate-900 py-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center mb-12">
      <h2 class="text-3xl font-bold text-white">Vídeos Recientes</h2>
      <a
        href="/videos"
        class="text-slate-400 hover:text-white transition-colors flex items-center gap-2"
      >
        Todos los vídeos <ArrowRight size={20} />
      </a>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {
        recentVideos.slice(0, 3).map((video) => (
          <a href={video.data.youtubeUrl} target="_blank" class="group">
            <div class="relative aspect-video rounded-2xl overflow-hidden mb-4">
              <Image
                width={1920}
                height={1080}
                src={video.data.thumbnail}
                alt={video.data.title}
                class="w-full h-full object-cover"
              />
              <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 flex items-center justify-center transition-opacity">
                <Icon
                  name="fa7-brands:youtube"
                  size={32}
                  class="w-16 h-16 text-red-600"
                />
              </div>
            </div>
            <h3 class="text-lg font-bold text-white group-hover:text-indigo-400 transition-colors">
              {video.data.title}
            </h3>
            <span class="text-slate-500 text-sm">{video.data.categories}</span>
          </a>
        ))
      }
    </div>
  </div>
</section>
